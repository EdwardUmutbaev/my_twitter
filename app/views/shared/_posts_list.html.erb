<% @posts.each do |post|%>  
    <table>
    <tr>
      <td rowspan="3"><%= link_to (image_tag post.user.avatar.url(:small), :border=>0), post.user %> </td>
    </tr>
    <tr>      
      <td colspan="3"><b> <%= link_to post.user.username, post.user %></b> </td>		
    </tr>
    <tr>          
      <td><%= post.message %> </td>
    </tr>
    <tr>
     <td></td>
     <td class="time"> <%= distance_of_time_in_words_to_now(post.created_at) %> ago </i>
      <% if current_user?(post.user) %>  
        <%= link_to (image_tag 'icon_delete.gif', :border => false), post, :confirm => 'Are you sure you want to delete this tweet?', :method => :delete %>
      <% end %> </td>       
    </tr>      
    </table> <hr>
<% end %>
