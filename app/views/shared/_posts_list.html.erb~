<% @posts.each do |post|%>
  
    <%= image_tag 'Avatar' %>
    <%= link_to post.user.username, post.user %>
    <%= post.message %> <br>
    <i><%= distance_of_time_in_words_to_now(post.created_at) %> ago </i>
      <% if current_user?(post.user) %>  
        <%= link_to "delete", post, :method => :delete, :confirm => "You sure?" %>
      <% end %> <br> <hr>
<% end %>
